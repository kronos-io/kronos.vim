"-------------------------------------------------------------# Print interval #

Execute (Print interval):
  let Interval = function('kronos#utils#date_interval')
  let d = kronos#utils#config().second_in

  let scenarios = [
    \['1h 1min 1s', Interval(d.hour   + d.min    + d.sec)  ],
    \['1y 1mo 2d' , Interval(d.year   + d.month  + d.day*2)],
    \['1d 5h 2s'  , Interval(d.day    + d.hour*5 + d.sec*2)],
    \['3w 55s'    , Interval(d.week*3 + d.sec*55)          ],
  \]

Then (should print interval):
  for [printed, interval] in scenarios
    AssertEqual printed, interval
  endfor

"-----------------------------------------------------------------# Print diff #

Execute (Print diff):
  let min   = kronos#utils#config().second_in.min
  let hour  = kronos#utils#config().second_in.hour
  let day   = kronos#utils#config().second_in.day
  let week  = kronos#utils#config().second_in.week
  let month = kronos#utils#config().second_in.month
  let year  = kronos#utils#config().second_in.year

  let scenarios = [
    \[g_date_ref      , g_date_ref+42     , 'in 43s'  ],
    \[g_date_ref+42   , g_date_ref        , '43s ago' ],
    \[g_date_ref      , g_date_ref+min    , 'in 2min' ],
    \[g_date_ref+min  , g_date_ref        , '2min ago'],
    \[g_date_ref      , g_date_ref+hour-1 , 'in 60min'],
    \[g_date_ref+hour , g_date_ref        , '2h ago'  ],
    \[g_date_ref      , g_date_ref+day-1  , 'in 24h'  ],
    \[g_date_ref+day  , g_date_ref        , '2d ago'  ],
    \[g_date_ref      , g_date_ref+week-1 , 'in 7d'   ],
    \[g_date_ref+week , g_date_ref        , '2w ago'  ],
    \[g_date_ref      , g_date_ref+month-1, 'in 5w'   ],
    \[g_date_ref+month, g_date_ref        , '2mo ago' ],
    \[g_date_ref      , g_date_ref+year-1 , 'in 12mo' ],
    \[g_date_ref+year , g_date_ref        , '2y ago'  ],
    \[g_date_ref      , g_date_ref+year*5 , 'in 6y'   ],
  \]

Then (should print diff):
  for [date_src, date_dest, diff] in scenarios
    AssertEqual diff, kronos#utils#date_diff(date_src, date_dest)
  endfor
